<h1>Listing BeerClubs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% unless @beer_clubs.nil? %>
  <tbody>

  <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club_path(beer_club) %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
      </tr>
  <% end %>

  </tbody>
<% end %>
</table>

<br>

<%= link_to 'New BeerClub', new_beer_club_path, class:"btn btn-primary" if current_user %>
