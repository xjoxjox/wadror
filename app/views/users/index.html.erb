<h1>Listing users</h1>

<% if @users %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td> <% if user.froze %><span class="label label-info">account frozen</span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>