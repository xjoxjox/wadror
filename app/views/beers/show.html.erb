<% cache @beer do %>

  <p>
    <h2><%= @beer.name %></h2>
  </p>

  <p>
    <strong>Style:</strong>
    <%= link_to @beer.style.name, style_path(@beer.style) %>
  </p>

  <p>
    <strong>Brewed by:</strong>
    <%= link_to @beer.brewery.name, brewery_path(@beer.brewery) %>
  </p>

  <p>Beer has <%= pluralize(@beer.ratings.count, 'rating') %>, average <%= round(@beer.average_rating) %></p>

<% end %>

<% if current_user %>

    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit class:"btn btn-primary" %>
    <% end %>
<% end %>

<%= edit_and_destroy_buttons(@beer) if current_user %>
